%********************* Conclusions & Future Work **************************************

\newenvironment{conclusions}{
   \def\toclevel@section{0}
   \phantomsection
   \addcontentsline{toc}{chapter}{SUMMARY AND CONCLUSIONS}
   \def\toclevel@section{1}
    \newpage
    \begin{center}\large\bfseries{SUMMARY AND CONCLUSIONS}\end{center}
    %\par
    \vspace{2ex}{\hrule height 2pt}\vspace{7ex}
    \vspace{4.5ex}
   %\resetbaselineskip\normalfont\normalsize
   \normalfont\normalsize
}{\newpage}

%********************* Abstract Page ********************************************

\newenvironment{abstract}{
   \def\toclevel@section{0}
   \cleardoublepage
   \phantomsection
   \addcontentsline{toc}{chapter}{ABSTRACT}
   %\def\toclevel@section{1}
   %\vspace*{2.0 \baselineskip}
   \begin{center}
      \centeredHeadingPar{\MakeUppercase{\mytitle}} \\
      Abstract \\
      \doublespace
      by \myname, Ph.D.\\
      \singlespace
      \myschool \\
      \mydate \\
      \quadspace
      Chair: \mycommitteea
   \end{center}
   \doublespace
}
{\newpage}

