%********************* Page Setup ********************************************
\usepackage{vmargin}
\usepackage[normalem]{ulem}
\newcommand{\setUpThesisPages}{
 % Page setup: In most cases you won't need to change this.
\setpapersize{USletter}
\setmarginsrb{1.25in}{1.25in}{1.25in}{1.25in}  % left, top, right, bottom
             {0ex}{5ex}{0in}{0.15in} % headht, headsp, footht, footsp
\setlength\ULdepth{0.9ex}
}

%********************* Page Style Setup ********************************************

\newcommand{\setUpThesisStyle}{
 \setcounter {chapter} {0}
 \clearpage
 \setcounter{page}{1}
 \pagestyle{plain}
 \pagenumbering{arabic}
 \pagestyle{myheadings}
}

%********************* Tables Setup ********************************************
%TOC, LOF, LOT
    \newcommand{\setUpTables}{
    \let\WriteBookmarks\relax
    \pdfbookmark[0]{TABLE OF CONTENTS}{theTOC}
    \tableofcontents \clearpage
    \listoftables \clearpage
    \listoffigures \clearpage
    \addtocontents{lot}{\hspace{-1em}Table \hfill Page}
    \addtocontents{lof}{\hspace{-1em}Figure\hfill Page}
}

%********************* Title Page ********************************************

\newcommand{\DisplayTitlePage}{
  \thispagestyle{empty}
  \doublespace
  \begin{center}

    % display title
    \centeredHeadingPar{\MakeUppercase{\mytitle}}

    % display candidate's name
    \vfill

    By \\
    \doublespace
    \MakeUppercase{\myname}\\
    \vfill

    % display degree
    \singlespace
    A \MakeLowercase{\mythesis} submitted in partial fulfillment of \\
    the requirements for the degree of \\
    \doublespace
    \MakeUppercase{\mydegree}

    % display school and department
    \quadspace
    \MakeUppercase{\myschool} \\
    \singlespaceNormal
    \mydept

    % display defense date
    \doublespace
    \MakeUppercase{\mydate}

    %copyright page
    \if@addCopyright
     \copyright \space Copyright by \MakeUppercase{\myname}, \myyear \\
     \singlespace
     All Rights Reserved
    \fi

   \end{center}

     %start a new page
    \newpage
}

%********************* Signature Page ********************************************
\newcommand{\DisplaySignaturePage}{

    % The numbering style is roman for the first few pages
    \pagestyle{myheadings}
    \doublespace
    \pagenumbering{roman}
    \setcounter{page}{2}
    \vspace*{\fill}

    % Text
    \begin{flushleft}To the Faculty of \myschool:

    \hspace{1cm} The members of the Committee appointed to examine the \MakeLowercase{\mythesis} of \MakeUppercase{\myname} find it satisfactory and recommend that it be accepted.
    \end{flushleft}

    % Name of committee members and their signatures. Can be more than 3, 4, or 5 members.
    \vspace{2.0 \baselineskip}
    \hfill
    \begin{minipage}{3in}
        \begin{center}
	       \singlespace
           \hrulefill \\
	       \mycommitteea, Ph.D., Chair \\
	       \vspace{2.0 \baselineskip}
	       \hrulefill \\
	       \mycommitteeb, Ph.D. \\
	       \vspace{2.0 \baselineskip}
	       \hrulefill \\
	       \mycommitteec, Ph.D. \\
           \if@mycommitteed
               \vspace{2.0 \baselineskip}
    	       \hrulefill \\
    	       \mycommitteed, Ph.D. \\
           \fi
           \if@mycommitteee
               \vspace{2.0 \baselineskip}
    	       \hrulefill \\
    	       \mycommitteee, Ph.D. \\
           \fi
       \end{center}
    \end{minipage}

    %start a new page
    \vfill
    \newpage
}

